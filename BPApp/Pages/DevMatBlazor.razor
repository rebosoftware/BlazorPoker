@page "/devmatblazor"


MatAutoCompleteList<br />
<MatAutocompleteList Items="@AutoCompleteOptions" TItem="string" Label="Pick one"></MatAutocompleteList>
<br /><br />

MatCheckbox<br />
<MatCheckbox @bind-Value="@Checked" Label="@(getLabel(Checked))"></MatCheckbox>
<br /><br />


@code {
    private string[] AutoCompleteOptions { get; set; }
    private bool Checked { get; set; }

    protected override void OnInitialized()
    {
        AutoCompleteOptions = new[]
            {
                "One",
                "Two",
                "Three"
            };

        Checked = true;
            
    }

    private string getLabel(bool val)
    {
        return !val ? "Check me!" : "Uncheck me?";
    }

}